{
	"name": "@repo/extension",
	"displayName": "Whispering",
	"version": "6.5.0",
	"private": true,
	"description": "Seamlessly integrate speech-to-text transcriptions on ChatGPT and anywhere on the web. Powered by OpenAI's Whisper API.",
	"author": "Braden Wong <whispering@bradenwong.com>",
	"exports": {
		".": "./lib/extension.ts"
	},
	"scripts": {
		"dev": "plasmo dev",
		"build": "plasmo build",
		"package": "plasmo package"
	},
	"dependencies": {
		"@epicenterhq/result": "^0.9.1",
		"@plasmohq/messaging": "^0.6.2",
		"@plasmohq/storage": "^1.15.0",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.5",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@repo/shared": "workspace:*",
		"@tanstack/react-query": "^5.77.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"idb": "^8.0.3",
		"lucide-react": "^0.424.0",
		"nanoid": "^5.1.5",
		"next-themes": "^0.4.6",
		"plasmo": "^0.89.5",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"sonner": "^1.7.4",
		"tailwind-merge": "^2.6.0",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.25.30"
	},
	"devDependencies": {
		"@types/chrome": "^0.0.287",
		"@types/node": "^22.15.21",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.3",
		"typescript": "^5.8.3"
	},
	"manifest": {
		"host_permissions": [
			"http://localhost:5173/*",
			"http://localhost:4173/*",
			"https://*/"
		],
		"permissions": [
			"tabs",
			"clipboardWrite",
			"storage",
			"scripting",
			"notifications"
		],
		"commands": {
			"toggleRecording": {
				"suggested_key": {
					"default": "Ctrl+Shift+X",
					"mac": "Command+Shift+X"
				},
				"description": "Toggle recording"
			}
		},
		"externally_connectable": {
			"matches": [
				"http://localhost:5173/*",
				"https://whispering.bradenwong.com/*"
			]
		}
	}
}
